<ul id="content">
    @foreach (var item in Model.Post)
    {
        int id = item.ID;
        <li class="post">
            <a href="/Posts/Details?id=@id"  class="pic-link">
                    <img class="post-img" src=@Url.Content(item.photo) alt="test" /> 
            </a>
            <a class="post-title" href="/Posts/Details?id=7" title="@Html.DisplayName(item.Title)"> @Html.DisplayName(item.Title)</a>
            <p class="author">@Html.DisplayName(item.display_name)</p> 
             
        </li>
    }
</ul>
       
 



<style>
    .carousel-inner {
        height: 300px;
        width: 100%;
        background-color: white;
    }

    .carousel-item img {
        width: 100%;
        height: 300px;
    }

    .post-img {
        margin: 10px 1px 10px;
        height: 150px;
        width: 250px;
    }
    .post {
        border: 0 solid black;
        display: inline-block;
        float: left;
        height: 250px;
        margin: 8px;
        overflow: hidden;
        position: relative;
        width: 286px;
    }
    .post-title {
        display: block;
        padding-top: 5px;
        text-align: left;
        width: 286px;
        overflow: hidden;
        white-space: nowrap;
    }
    .author{
        white-space: nowrap
    }
    .content {
        font-size: 0.875em;
        line-height: 1.71429em;
        margin-bottom: 1.5em;
        list-style-position: inside;
        margin-top: 0;
        padding: 0;
    }

</style>



