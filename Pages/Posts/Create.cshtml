@page
@model gis_portfolio.Pages.Posts.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    #boxLong{
        width: 1000px;
        height: 250px;
    }



</style>
<h1>Create a Project</h1>

<h4>Project</h4> 
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.short_desc" class="control-label"></label>
                <input asp-for="Post.short_desc" class="form-control" />
                <span asp-validation-for="Post.short_desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.date" class="control-label"></label>
                <input asp-for="Post.date" class="form-control" />
                <span asp-validation-for="Post.date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.author" class="control-label"></label>
                <input asp-for="Post.author" class="form-control" />
                <span asp-validation-for="Post.author" class="text-danger"></span>
            </div>
            <div class="form-group" id="longDesc">
                <label asp-for="Post.long_desc" class="control-label"></label>
                <input asp-for="Post.long_desc" class="form-control" id="boxLong"/>
                <span asp-validation-for="Post.long_desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Home Page">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}