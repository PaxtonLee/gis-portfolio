@page
@model gis_portfolio.Pages.Posts.IndexModel
@{
    ViewData["Title"] = "Profile Page";
}

<p>
    <a asp-page="Posts/Create">Create New Post</a>
</p>

<!-- <h1>@ViewData["Title"]</h1> -->
<div class="row">
    <div class="col-sm-6">
        <h1 class="col-sm-4">Profile</h1>
        <p class="col-sm-4">@User.Identity.Name</p>
    </div>
    <div id="pic" class="col-sm-6">
        <img id="profpic" class="avatar" src="~/css/Resources/road.jpg" />
    </div>
</div>

<div id="projTable " class="container">
    <h4>Projects</h4>
    <ul id="content">
        @foreach (var item in Model.Post)
        {
            @if (item.author == User.Identity.Name)
            {
                int id = item.ID;
                <li class="post">
                    <a href="/Posts/Details?id=@id" class="pic-link">
                        <img class="post-img" src=@Url.Content(item.photo) alt="test" />
                    </a>
                    <a class="post-title" href="/Posts/Details?id=@id" title="@Html.DisplayName(item.Title)"> @Html.DisplayName(item.Title)</a>
                    <p class="author">@Html.DisplayName(item.display_name)</p>

                </li>
            }
        }
    </ul>
</div>





<style>
    .col-md-6 {
        background-color: rgb(245,130,42);
    }

    .avatar {
        /*vertical-align: middle;*/
        width: 100px;
        height: 100px;
        border-radius: 50%;
    }

    #pic {
        text-align: right;
    }

    .row {
        outline-color: black;
        outline-style: inset;
        outline-width: thin;
    }

    .carousel-inner {
        height: 300px;
        width: 100%;
        background-color: white;
    }

    .carousel-item img {
        width: 100%;
        height: 300px;
    }

    .post-img {
        margin: 10px 1px 10px;
        height: 150px;
        width: 250px;
    }

    .post {
        border: 0 solid black;
        display: inline-block;
        float: left;
        height: 250px;
        margin: 8px;
        overflow: hidden;
        position: relative;
        width: 286px;
    }

    .post-title {
        display: block;
        padding-top: 5px;
        text-align: left;
        width: 286px;
        overflow: hidden;
        white-space: nowrap;
    }

    .author {
        white-space: nowrap
    }

    .content {
        font-size: 0.875em;
        line-height: 1.71429em;
        margin-bottom: 1.5em;
        list-style-position: inside;
        margin-top: 0;
        padding: 0;
    }
</style>







